{
    "type": "origins:active_self",
    "name": "Siren Song",
    "description": "The ethereal sounds you can produce empower fellow sirens and weaken other entities. you should only use this in water though.",
    "entity_action": {
        "type": "origins:if_else",
        "condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:submerged_in",
                    "fluid": "minecraft:water"
                },
                {
                    "type": "origins:in_rain"
                }
            ]
        },
        "if_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:apply_effect",
                    "effects": [
                        {
                            "effect": "minecraft:strength",
                            "duration": 400,
                            "amplifier": 0,
                            "show_icon": true
                        },
                        {
                            "effect": "minecraft:speed",
                            "duration": 400,
                            "amplifier": 1,
                            "show_icon": true
                        },
                        {
                            "effect": "minecraft:jump_boost",
                            "duration": 400,
                            "amplifier": 1,
                            "show_icon": true
                        },
                        {
                            "effect": "minecraft:invisibility",
                            "duration": 400,
                            "amplifier": 0,
                            "show_icon": true
                        }
                    ],
                    "conditions": [
                        {
                            "type": "origins:origin",
                            "origin": "stupidity:zoey_origin"
                        }
                    ]
                },
                {
                    "type": "origins:apply_effect",
                    "effects": [
                        {
                            "effect": "minecraft:weakness",
                            "duration": 400,
                            "amplifier": 1,
                            "show_icon": true
                        },
                        {
                            "effect": "minecraft:slowness",
                            "duration": 400,
                            "amplifier": 2,
                            "show_icon": true
                        },
                        {
                            "effect": "minecraft:blindness",
                            "duration": 400,
                            "amplifier": 0,
                            "show_icon": true
                        },
                        {
                            "effect": "minecraft:glowing",
                            "duration": 400,
                            "amplifier": 0,
                            "show_icon": true
                        }
                    ],
                    "conditions": [
                        {
                            "type": "origins:origin",
                            "origin": "stupidity:zoey_origin",
                            "inverted": true
                        }
                    ]
                }
            ]
        },
        "else_action":{
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:area_of_effect",
                    "radius": 16,
                    "bientity_action": {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:damage",
                            "amount": 3,
                            "source": {
                                "name": "magic",
                                "bypasses_armor": true,
                                "magic": true
                            }
                        }
                    },
                    "include_target": true
                },
                {
                    "type": "origins:play_sound",
                    "sound": "minecraft:custom.inhuman-screech" 
                }
            ]
        }
    },
    "cooldown": 60,
    "hud_render": {
        "should_render": true
    },
    "key": {
        "key": "key.origins.primary_active"
    }
}